set font                        "Overpass 10"
set default-bg                  "#232629" #00
set default-fg                  "#dfdfdf" #01

set statusbar-bg                "#262626" #01
set statusbar-fg                "#dfdfdf" #04

set inputbar-bg                 "#232629" #00 currently not used
set inputbar-fg                 "#dfdfdf" #02

set notification-error-bg       "#232629" #08
set notification-error-fg       "#cc241d" #00

set notification-warning-bg     "#232629" #08
set notification-warning-fg     "#d79921" #00

set highlight-color             "#232629" #0A
set highlight-active-color      "#dfdfdf" #0D

set completion-highlight-fg     "#4e4e4e" #02
set completion-highlight-bg     "#87afaf" #0C

set completion-bg               "#4e4e4e" #02
set completion-fg               "#dfdfdf" #0C

set notification-bg             "#232629" #0B
set notification-fg             "#458588" #00

set recolor-lightcolor          "#232629" #00
set recolor-darkcolor           "#dfdfdf" #06
set recolor                     "true"

# setting recolor-keephue true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue "true"

set selection-clipboard "clipboard"

# keybindings
map a adjust_window best-fit
map s adjust_window width
map f follow
map <Tab> toggle_index
map l scroll left
map j scroll down
map k scroll up
map h scroll right
