sleep .3

i3-msg exec "workspace 4; exec st -e zsh -c 'neomutt && zsh'"
sleep .3
i3-msg exec "workspace 4; exec st -e zsh -c 'ncmpcpp -s clock && zsh'"
sleep .3
i3-msg exec "workspace 4; exec st -e zsh -c 'htop && zsh'"
sleep .3
i3-msg exec "workspace 4; exec st -e zsh -c 'sudo powertop && zsh'"
sleep .3
i3-msg exec "workspace 4; exec st -e zsh -c 'journalctl -f && zsh'"
sleep .3

i3-msg "workspace 1"
